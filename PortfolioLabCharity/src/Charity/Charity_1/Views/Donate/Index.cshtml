@model Charity.Models.ViewModels.DonationViewModel
<!DOCTYPE html>
<html lang="pl">
@Html.Partial("_PartialDonateHead")

<body>
    <header class="header--form-page">
        @Html.Partial("_PartialDonateHeader")
        <div class="slogan container container--90">
            <div class="slogan--item">
                <h1>
                    Oddaj rzeczy, których już nie chcesz<br />
                    <span class="uppercase">potrzebującym</span>
                </h1>

                <div class="slogan--steps">
                    <div class="slogan--steps-title">Wystarczą 4 proste kroki:</div>
                    <ul class="slogan--steps-boxes">
                        <li>
                            <div><em>1</em><span>Wybierz rzeczy</span></div>
                        </li>
                        <li>
                            <div><em>2</em><span>Spakuj je w worki</span></div>
                        </li>
                        <li>
                            <div><em>3</em><span>Wybierz fundację</span></div>
                        </li>
                        <li>
                            <div><em>4</em><span>Zamów kuriera</span></div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>

    <section class="form--steps">
        <div class="form--steps-instructions">
            <div class="form--steps-container">
                <h3>Ważne!</h3>
                <p data-step="1" class="active">
                    Uzupełnij szczegóły dotyczące Twoich rzeczy. Dzięki temu będziemy
                    wiedzieć komu najlepiej je przekazać.
                </p>
                <p data-step="2">
                    Uzupełnij szczegóły dotyczące Twoich rzeczy. Dzięki temu będziemy
                    wiedzieć komu najlepiej je przekazać.
                </p>
                <p data-step="3">
                    Wybierz jedną, do
                    której trafi Twoja przesyłka.
                </p>
                <p data-step="4">Podaj adres oraz termin odbioru rzeczy.</p>
            </div>
        </div>

        <div class="form--steps-container">
            <div class="form--steps-counter">Krok <span>1</span>/4</div>

            <form action="../Donate/Index" method="post">
                <!-- STEP 1: class .active is switching steps -->
                <div data-step="1" class="active">
                    <h3>Zaznacz co chcesz oddać:</h3>

                    @foreach (var item in Model.CategoriesList)
                    {
                        <div class="form-group form-group--checkbox">
                            <label>
                                <input type="checkbox"
                                       name="categories"
                                       value="@item.CategoryId"
                                       />
                                <span class="checkbox"></span>
                                <span class="description">@item.CategoryName</span>
                            </label>
                        </div>
                    }


                    <div class="form-group form-group--buttons">
                        <button type="button" class="btn next-step">Dalej</button>
                    </div>
                </div>

                <!-- STEP 2 -->
                <div data-step="2">
                    <h3>Podaj liczbę 60l worków, w które spakowałeś/aś rzeczy:</h3>

                    <div class="form-group form-group--inline">
                        <label>
                            Liczba 60l worków: 
                            <input asp-for="donation.DonationQuantity" type="number" name="bags" step="1" min="1" id="bags" />
                        </label>
                    </div>

                    <div class="form-group form-group--buttons">
                        <button type="button" class="btn prev-step">Wstecz</button>
                        <button type="button" class="btn next-step">Dalej</button>
                    </div>
                </div>

                                                                                                                      

                <!-- STEP 3 -->
                <div data-step="3">
                    <h3>Wybierz organizację, której chcesz pomóc:</h3>
                    @foreach (var item in Model.InstitutionsList)
                    {
                        <div class="form-group form-group--checkbox">
                            <label>
                                <input type="radio" name="organization" value="@item.InstitutionId" />
                                <span class="checkbox radio"></span>
                                <span class="description">
                                    <div class="title">@item.InstitutionTitle</div>
                                    <div class="subtitle">
                                        @item.Description
                                    </div>

                                </span>
                            </label>
                        </div>
                    }

                    <div class="form-group form-group--buttons">
                        <button type="button" class="btn prev-step">Wstecz</button>
                        <button type="button" class="btn next-step">Dalej</button>
                    </div>
                </div>

                <!-- STEP 4 -->
                <div data-step="4">
                    <h3>Podaj adres oraz termin odbioru rzecz przez kuriera:</h3>

                    <div class="form-section form-section--columns">
                        <div class="form-section--column">
                            <h4>Adres odbioru</h4>
                            <div class="form-group form-group--inline">
                                <label> Ulica <input asp-for="donation.Street" type="text" name="street" id="street"/> </label>
                            </div>

                            <div class="form-group form-group--inline">
                                <label> Miasto <input asp-for="donation.City" type="text" name="city" id="city"/> </label>
                            </div>

                            <div class="form-group form-group--inline">
                                <label>
                                    Kod pocztowy <input asp-for="donation.ZipCode" type="text" name="postcode" id="postcode"/>
                                </label>
                            </div>

                            <div class="form-group form-group--inline">
                                <label>
                                    <!--zaimplpementowaw w DB-->        Numer telefonu <input type="phone" name="phone" id="phone" />
                                </label>
                            </div>
                        </div>

                        <div class="form-section--column">
                            <h4>Termin odbioru</h4>
                            <div class="form-group form-group--inline">
                                <label> Data <input asp-for="donation.PickUpTime" type="date" name="data" id="data"/> </label>
                            </div>
                            <!--zaimplpementowaw w DB-->
                            <div class="form-group form-group--inline">
                                <label> Godzina <input type="time" name="time" id="timePickUp" /> </label>
                            </div>

                            <div class="form-group form-group--inline">
                                <label>
                                    Uwagi dla kuriera
                                    <textarea asp-for="donation.PickUpComment" name="moreInfo" rows="5" id="moreInfo"></textarea>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group form-group--buttons">
                        <button type="button" class="btn prev-step">Wstecz</button>
                        <button type="button" class="btn next-step" id="showResults">Dalej</button>
                    </div>
                </div>

                <!-- STEP 5 -->
                <div data-step="5">
                    <h3>Podsumowanie Twojej darowizny</h3>

                    <div class="summary">
                        <div class="form-section">
                            <h4>Oddajesz:</h4>
                            <ul>
                                <li>
                                    <span class="icon icon-bag"></span>
                                    <span id="bagsResult"></span>
                                    <span class="summary--text"> - worki ubrań w dobrym stanie dla dzieci</span>
                                </li>

                                <li>
                                    <span class="icon icon-hand"></span>
                                    <span id="organizationResult"></span>
                                </li>
                            </ul>
                        </div>

                        <div class="form-section form-section--columns">
                            <div class="form-section--column">
                                <h4>Adres odbioru:</h4>
                                <ul>
                                    <li><span id="streetResult"></span></li>
                                    <li><span id="cityResult"></span></li>
                                    <li><span id="postcodeResult"></span></li>
                                    <li><span id="phoneResult"></span></li>
                                </ul>
                            </div>

                            <div class="form-section--column">
                                <h4>Termin odbioru:</h4>
                                <ul>
                                    <li><span id="dataResult"></span></li>
                                    <li><span id="timePickUpResult"></span></li>
                                    <li><span id="moreInfoResult"></span></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="form-group form-group--buttons">
                        <button type="button" class="btn prev-step">Wstecz</button>
                        <button type="submit" class="btn">Potwierdzam </button>
                    </div>
                </div>
            </form>
        </div>
    </section>

    @Html.Partial("_PartialPageFooter")

    <script src="~/js/site.js"></script>
</body>
</html>
